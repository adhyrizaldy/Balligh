<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:n2="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/width170"
    android:background="@drawable/nav_header_pm"
    android:theme="@style/ThemeOverlay.AppCompat.Light"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_person"
        android:layout_width="@dimen/width60"
        android:layout_height="@dimen/width60"
        n2:civ_circle_background_color="@color/putihAsli"
        n2:civ_border_width="@dimen/margin_very_small"
        android:layout_marginLeft="@dimen/margin_standard"
        android:layout_marginBottom="@dimen/margin_standard"
        n2:civ_border_color="@color/putihAsli"
        android:src="@mipmap/logo"
        android:layout_above="@+id/text_nama"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_standard"
        android:fontFamily="@font/roboto_regular"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="@dimen/text_big"
        android:textStyle="bold"
        android:textColor="@color/putihAsli"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/width40"
        android:layout_marginBottom="@dimen/margin_standard"
        android:id="@+id/text_nama"
        />
    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/image_person"
        android:layout_marginTop="@dimen/width40"
        android:id="@+id/rating_pm"
        android:layout_above="@+id/text_vote"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1230 vote"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/margin_standard"
        android:id="@+id/text_vote"
        android:layout_marginBottom="@dimen/margin_standard"
        android:layout_above="@+id/text_nama"
        />
</RelativeLayout>