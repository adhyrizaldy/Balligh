<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.exomatik.balligh.balligh.Activity.Authentication.ActWelcome"
    android:background="@drawable/background_blue_full"
    >
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/width200"
        android:layout_height="@dimen/width200"
        android:layout_centerInParent="true"
        app:civ_border_color="@color/putihAsli"
        app:civ_border_width="@dimen/margin_very_small"
        android:id="@+id/img_user"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_user"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_big"
        android:text="Ahlan Wa sahlan"
        android:textColor="@color/putihAsli"
        android:textSize="@dimen/text_small"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:fontFamily="@font/roboto_regular"
        android:id="@+id/text_user"
        />

</RelativeLayout>
